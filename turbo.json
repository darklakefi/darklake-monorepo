{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "format": {
      "dependsOn": ["^format"]
    },
    "lint": {
      "dependsOn": ["format"]
    },
    "test": {
      "dependsOn": ["lint"]
    },
    "web#build": {
      "dependsOn": ["test"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}
